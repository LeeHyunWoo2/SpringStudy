<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.lhwcloud.mapper.MemberMapper">
	<insert id="insertMember">
  		<![CDATA[
			insert into tbl_member(id, pw, name)values(#{id}, #{pw}, #{name})
		]]>
	</insert>
	<select id="readMember"
		resultType="net.lhwcloud.domain.MemberVO">
  		<![CDATA[
			select id, name from tbl_member where id=#{id}
		]]>
	</select>
	<update id="updateMember">
  		<![CDATA[
			update tbl_member set pw=#{pw}, name=#{name} where id=#{id}
		]]>
	</update>
	<delete id="deleteMember">
		<![CDATA[
			delete from tbl_member where id=#{id}
		]]>
	</delete>


</mapper><!-- readMember updateMember deleteMember -->