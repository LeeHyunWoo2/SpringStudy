<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 패키지 인터페이스명부터 적자 -->
<mapper namespace="net.lhwcloud.mapper.BoardMapper"> <!-- 패키지 인터페이스명 -->
	<!-- mybatis에선 sql이라는 태그로 미리 템플릿 만들어놓고 필요할때 include해서 바로 사용 가능한 기능이 있다. -->
	<sql id="paging">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()"> title like '%'||#{keyword}||'%' </when>
						<when test="type == 'C'.toString()"> content like '%'||#{keyword}||'%' </when>
						<when test="type == 'W'.toString()"> writer like '%'||#{keyword}||'%' </when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<select id="getList" resultType="net.lhwcloud.domain.BoardVO"> <!-- id:메서드명, resultType:객체 -->
  	<![CDATA[
  		select * from tbl_board where bno > 0
  		]]> <!-- CDATA 사용 이유는 부등호인지 문자인지 xml에서 판단하지말고 DB로 그대로 넘기라는 뜻 (문자처리) -->
	</select>

	<insert id="insert">
  	<![CDATA[
  		insert into tbl_board(bno, title, content, writer)
  		values (seq_board.nextval, #{title}, #{content}, #{writer})
  	]]>
	</insert>

	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
			select seq_board.nextval from dual
		</selectKey> <!-- insert 전에 번호를 미리 만들어놓음 -->
  
  	<![CDATA[
		insert into tbl_board(bno, title, content, writer)
  		values (seq_board.nextval, #{title}, #{content}, #{writer})
	]]>
	</insert>

	<select id="read" resultType="net.lhwcloud.domain.BoardVO">
  	<![CDATA[
		select * from tbl_board where bno = #{bno}
	]]> <!-- bno와 같은 테이블에 모든 정보를 가져와 객체화 시키라는 코드 -->
	</select>

	<update id="update">
  <![CDATA[
  	update tbl_board set title=#{title}, content=#{content}, writer=#{writer}, updateDate= sysdate
  	where bno = #{bno}
	]]>
	</update>

	<delete id="delete">
  <![CDATA[
		delete from tbl_board where bno = #{bno}
	]]> <!-- 번호를 조건으로 레코드(DB의 행 1개)를 삭제한다. -->
	</delete>

	<select id="getlListWithPaging"
		resultType="net.lhwcloud.domain.BoardVO">
  	<![CDATA[
		select bno, title, content, writer, regdate, updatedate
		from(select /*+index_desc(tbl_board pk_board)*/ rownum rn, bno, title, content, writer, regdate, updatedate
		from tbl_board where ]]>
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()"> title like '%'||#{keyword}||'%' </when>
						<when test="type == 'C'.toString()"> content like '%'||#{keyword}||'%' </when>
						<when test="type == 'W'.toString()"> writer like '%'||#{keyword}||'%' </when>
					</choose>
				</trim>
			</foreach>
		</trim>
		<![CDATA[ rownum <= #{ pageNum } * #{ amount })where rn > (#{pageNum}-1) * #{amount} ]]>
	</select>

	<select id="getTotalCount" resultType="int">
  	<![CDATA[
		select count(*) from tbl_board where bno > 0
	]]>
	</select>
</mapper>